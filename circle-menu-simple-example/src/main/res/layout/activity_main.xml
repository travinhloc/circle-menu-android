<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.ramotion.circlemenu.example.simple.MainActivity">

    <com.ramotion.circlemenu.RelativeLayoutSquareHorizontal
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="0dp">

        <com.ramotion.circlemenu.CircleMenuView
            android:id="@+id/circle_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:icon_menu="@drawable/ic_notifications_white_24dp"
            app:icon_color="@color/colorPrimary"
            app:icon_close="@drawable/ic_notifications_white_24dp"
            app:button_labels="@array/labels"
            app:button_colors="@array/colors"
            app:button_icons="@array/icons" />

    </com.ramotion.circlemenu.RelativeLayoutSquareHorizontal>

    <Button
        android:id="@+id/azz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a"/>

</RelativeLayout>
